<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="http://localhost:8000/assets/css/output.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body>
    <div
      class="register w-screen h-screen bg-slate-300 flex justify-center items-center"
    >
      <div class="w-[350px] px-8 py-6 bg-white rounded-md shadow-sm">
        <h2 class="text-2xl font-bold text-center">Register</h2>
        <form
          action="/user-register"
          method="post"
          enctype="multipart/form-data"
        >
          <div class="flex flex-col gap-1 mb-2">
            <label class="text-slate-500" for="name">Name</label>
            <input
              class="px-3 py-2 outline-none border bg-[#f9f9f9] rounded-md focus:border-green-500"
              type="text"
              placeholder="Name"
              name="name"
              id="name"
            />
            <% if (error && error.name) { %>
            <p class="text-red-500"><%=error.name%></p>
            <%}%>
          </div>
          <div class="flex flex-col gap-1 mb-2">
            <label class="text-slate-500" for="email">Email</label>
            <input
              class="px-3 py-2 outline-none border bg-[#f9f9f9] rounded-md focus:border-green-500"
              type="text"
              placeholder="Email"
              name="email"
              id="email"
            />
            <% if (error && error.email) { %>
            <p class="text-red-500"><%=error.email%></p>
            <%}%>
          </div>
          <div class="flex flex-col gap-1 mb-2">
            <label class="text-slate-500" for="password ">Password</label>
            <input
              class="px-3 py-2 outline-none border bg-[#f9f9f9] rounded-md focus:border-green-500"
              type="text"
              placeholder="Password"
              name="password"
              id="password"
            />
            <% if (error && error.password) { %>
            <p class="text-red-500"><%=error.password%></p>
            <%}%>
          </div>
          <div class="flex flex-col gap-1 mb-2">
            <label class="text-slate-500" for="image ">Image</label>
            <div
              class="text-slate-500 border flex justify-between pl-2 items-center bg-[#f9f9f9] rounded-md outline-none overflow-hidden"
            >
              <span id="text">Your Image</span>
              <label
                class="p-2 cursor-pointer text-white bg-blue-500"
                for="image"
                >Browser</label
              >
            </div>
            <input class="hidden" type="file" id="image" name="image" />
            <% if (error && error.image) { %>
            <p class="text-red-500"><%=error.image%></p>
            <%}%>
          </div>
          <button
            class="px-5 w-full py-2 text-white rounded-sm bg-blue-500 hover:bg-blue-600"
          >
            Register
          </button>

          <% if(locals.messages && messages.error){%>
          <div id="alert" class="p-2 bg-red-500 text-white my-2 relative">
            <p class="text-sm"><%= messages.error %></p>
            <span
              class="absolute top-[3px] right-[8px] cursor-pointer text-lg"
              id="close"
              ><i class="fa-solid fa-xmark"></i
            ></span>
          </div>
          <%}%>

          <div
            class="w-full text-blue-600 mt-2 flex justify-center items-center"
          >
            <a href="/login">Login account</a>
          </div>
        </form>
      </div>
    </div>

    <script>
      const close = document.getElementById("close");
      const alert = document.getElementById("alert");
      if (close && alert) {
        close.addEventListener("click", () => {
          alert.classList.add("hidden");
        });
      }
      const image = document.getElementById("image");
      image.addEventListener("change", (e) => {
        if (e.target.files.length > 0) {
          const name = e.target.files[0].name;
          const text = document.getElementById("text");
          text.textContent = name.slice(0, 20);
        }
      });
    </script>
  </body>
</html>
